        <Label Content="0" Margin="524,545,260,29" FlowDirection="RightToLeft"/>
        <Button Content="انصراف"   Margin="197,541,493,39" />
        <Button Content="پرداخت"   Margin="49,541,641,39" />
    </Grid>
</Window>
